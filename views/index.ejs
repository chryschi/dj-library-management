<!doctype html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% tracks.map((track) =>{ %>
      <li>
        <%= track.title %>,
        <%= track.artist %>,
        <%= track.key %>,
        <%= track.bpm %>bpm
        <%= track.mp3 ? ", mp3": "" %>
        <%= track.lossless  ? ", lossless": ""%>
        <form
          action="/tracks/<%= track.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('wanna delete? all double drop connections and matching song connections will also be deleted')"
          >
            Delete
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
