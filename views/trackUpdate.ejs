<!doctype html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <form action="tracks/0/update" method="POST">
      <div>
        <label for="title">Title: </label>
        <input
          type="text"
          name="title"
          id="title"
          value="<%= track.title %>"
          required
        />
      </div>
      <div>
        <label for="artist">Artist(s): </label>
        <input
          type="text"
          name="artist"
          id="artist"
          value="<%= track.artist %>"
          placeholder="For multiple artists insert comma inbetween like so: Wilkinson, Becky Hill"
          required
        />
      </div>
      <div>
        <label for="mood-select">Mood: </label>
        <select name="moodId" id="mood-select">
          <% moods.map((mood) => { %>
          <option value="<%= mood.id %>"><%= mood.mood %></option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="key">Key</label>
        <select name="keyId" id="key">
          <% keys.map((key) => { %>
          <option value="<%= key.id %>">
            <%= key.key %>/<%= key.key_camelot%>
          </option>
          <% }); %>
        </select>
      </div>
      <label for="bpm">BPM: </label>
      <input type="number" name="bpm" id="bpm" value="" />

      <fieldset>
        <legend>Choose purchased file formats:</legend>

        <label for="mp3">mp3</label>
        <input type="checkbox" name="purchasedMp3" id="mp3" />

        <label for="lossless">lossless</label>
        <input type="checkbox" name="purchasedLossless" id="lossless" />
      </fieldset>

      <button type="submit">Update Track Info</button>
    </form>
  </body>
</html>
